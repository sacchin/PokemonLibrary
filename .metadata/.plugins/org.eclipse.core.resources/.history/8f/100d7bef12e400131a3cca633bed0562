	public static int convertSkillNameToNo(String skillName){
		if("ƒm[ƒ}ƒ‹".equals(skillName)){
			return NORMAL;
		}else if("‚Ù‚Ì‚¨".equals(skillName)){
			return FIRE;
		}else if("‚İ‚¸".equals(skillName)){
			return WATER;
		}else if("‚Å‚ñ‚«".equals(skillName)){
			return ELECTRIC;
		}else if("‚­‚³".equals(skillName)){
			return GRASS;
		}else if("‚±‚¨‚è".equals(skillName)){
			return ICE;
		}else if("‚©‚­‚Æ‚¤".equals(skillName)){
			return FIGHTING;
		}else if("‚Ç‚­".equals(skillName)){
			return POINSON;
		}else if("‚¶‚ß‚ñ".equals(skillName)){
			return GROUND;
		}else if("‚Ğ‚±‚¤".equals(skillName)){
			return FLYNG;
		}else if("ƒGƒXƒp[".equals(skillName)){
			return PSYCHIC;
		}else if("‚Ş‚µ".equals(skillName)){
			return BUG;
		}else if("‚¢‚í".equals(skillName)){
			return ROCK;
		}else if("ƒS[ƒXƒg".equals(skillName)){
			return GHOST;
		}else if("ƒhƒ‰ƒSƒ“".equals(skillName)){
			return DRAGON;
		}else if("‚ ‚­".equals(skillName)){
			return DARK;
		}else if("‚Í‚ª‚Ë".equals(skillName)){
			return STEEL;
		}else if("ƒtƒFƒAƒŠ[".equals(skillName)){
			return FEARY;
		}else{
			return -1;
		}

	}

	public static float calcurateAffinity(int attackType, Pokemon p){
		return AFFINITY_TABLE[attackType][p.getType1()] * AFFINITY_TABLE[attackType][p.getType2()];
	}
