	public static int convertSkillNameToNo(String skillName){
		if("ノーマル".equals(skillName)){
			return NORMAL;
		}else if("ほのお".equals(skillName)){
			return FIRE;
		}else if("みず".equals(skillName)){
			return WATER;
		}else if("でんき".equals(skillName)){
			return ELECTRIC;
		}else if("くさ".equals(skillName)){
			return GRASS;
		}else if("こおり".equals(skillName)){
			return ICE;
		}else if("かくとう".equals(skillName)){
			return FIGHTING;
		}else if("どく".equals(skillName)){
			return POINSON;
		}else if("じめん".equals(skillName)){
			return GROUND;
		}else if("ひこう".equals(skillName)){
			return FLYNG;
		}else if("エスパー".equals(skillName)){
			return PSYCHIC;
		}else if("むし".equals(skillName)){
			return BUG;
		}else if("いわ".equals(skillName)){
			return ROCK;
		}else if("ゴースト".equals(skillName)){
			return GHOST;
		}else if("ドラゴン".equals(skillName)){
			return DRAGON;
		}else if("あく".equals(skillName)){
			return DARK;
		}else if("はがね".equals(skillName)){
			return STEEL;
		}else if("フェアリー".equals(skillName)){
			return FEARY;
		}else{
			return -1;
		}

	}

}
