package com.gmail.sacchin.pockemonbattletools.entity;

import java.util.ArrayList;
import java.util.List;

import org.json.JSONArray;
import org.json.JSONException;
import org.json.JSONObject;

import com.gmail.sacchin.pokemonlibrary.entity.Skill;

public class PockemonSkill extends Skill{
	private double rate = 0;
	private int ranking = 0;
	
	public static List<PockemonSkill> createWazaList(JSONArray waza){
		if(waza == null){
			return null;
		}
		
		List<PockemonSkill> result = new ArrayList<PockemonSkill>();
		for(int i = 0 ; i < waza.length() ; i++){
			try {
				createWaza(waza.getJSONObject(i));
			} catch (JSONException e) {
				e.printStackTrace();
			}
		}
		
	}
	public static PockemonSkill createWaza(JSONObject waza){
		try {
			PockemonSkill obj = new PockemonSkill(0, waza.getString("name"), waza.getString("name"), waza.getInt("typeId"), 0, 0, 0, 0);
			obj.setRanking(waza.getInt("ranking"));
			obj.setRate(waza.getDouble("usageRate"));
			return obj;
		} catch (JSONException e) {
			e.printStackTrace();
		}
		return null;
	}
			
	public PockemonSkill(int no, String name, String ename, int type, int power,
			int accuracy, int category, int pp) {
		super(no, name, ename, type, power, accuracy, category, pp);
	}

	public double getRate() {
		return rate;
	}

	public void setRate(double rate) {
		this.rate = rate;
	}

	public int getRanking() {
		return ranking;
	}

	public void setRanking(int ranking) {
		this.ranking = ranking;
	}
}
