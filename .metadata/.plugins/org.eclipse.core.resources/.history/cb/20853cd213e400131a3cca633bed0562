package com.gmail.sacchin.pokemonlibrary.entity;

public class Seikaku {
	public static final int SAMISIGARI = 0;
	public static final int IJIPPARI = 1;
	public static final int YANCHA = 2;
	public static final int YUKAN = 3;
	public static final int ZUBUTOI = 4;
	public static final int WANPAKU = 5;
	public static final int NOTENKI = 6;
	public static final int NONKI = 7;
	public static final int HIKAEME = 8;	
	public static final int OTTORI = 9;
	public static final int UKKARIYA = 10;
	public static final int REISEI = 11;	
	public static final int ODAYAKA = 12;
	public static final int OTONASI = 13;
	public static final int SINCHO = 14;
	public static final int NAMAIKI = 15;
	public static final int OKUBYO = 16;
	public static final int SEKKATI = 17;
	public static final int YOKI = 18;
	public static final int MUJAKI = 19;
	public static final int TEREYA = 20;
	public static final int GANBAIYA = 21;
	public static final int SUNAO = 22;
	public static final int KIMAGURE = 23;
	public static final int MAJIME = 24;
	
	public static float SEIKAKU_TABLE[][] = 
		{
		{1.1f,0.9f,1,1,1},
		{1.1f,1,0.9f,1,1},
		{1.1f,1,1,0.9f,1},
		{1.1f,1,1,1,0.9f},
		{0.9f,1.1f,1,1,1},
		{1,1.1f,0.9f,1,1},
		{1,1.1f,1,0.9f,1},
		{1,1.1f,1,1,0.9f},
		{0.9f,1,1.1f,1,1},
		{1,0.9f,1.1f,1,1},
		{1,1,1.1f,0.9f,1},
		{1,1,1.1f,0.9f,1},
		{0.9f,1,1,1.1f,1},
		{1,0.9f,1,1.1f,1},
		{1,1,0.9f,1.1f,1},
		{1,1,1,1.1f,0.9f},
		{0.9f,1,1,1,1.1f},
		{1,0.9f,1,1,1.1f},
		{1,1,0.9f,1,1.1f},
		{1,1,1,0.9f,1.1f},
		{1,1,1,1,1}
		};

	public static int convertSkillNameToNo(String skillName){
		
		if("ノーマル".equals(skillName)){
			return SAMISIGARI;
		}else if("ほのお".equals(skillName)){
			return IJIPPARI;
		}else if("みず".equals(skillName)){
			return YANCHA;
		}else if("でんき".equals(skillName)){
			return YUKAN;
		}else if("くさ".equals(skillName)){
			return ZUBUTOI;
		}else if("こおり".equals(skillName)){
			return WANPAKU;
		}else if("かくとう".equals(skillName)){
			return NOTENKI;
		}else if("どく".equals(skillName)){
			return NONKI;
		}else if("じめん".equals(skillName)){
			return HIKAEME;
		}else if("ひこう".equals(skillName)){
			return OTTORI;
		}else if("エスパー".equals(skillName)){
			return UKKARIYA;
		}else if("むし".equals(skillName)){
			return REISEI;
		}else if("いわ".equals(skillName)){
			return ODAYAKA;
		}else if("ゴースト".equals(skillName)){
			return OTONASI;
		}else if("ドラゴン".equals(skillName)){
			return SINCHO;
		}else if("あく".equals(skillName)){
			return NAMAIKI;
		}else if("はがね".equals(skillName)){
			return OKUBYO;
		}else if("フェアリー".equals(skillName)){
			return SEKKATI;
		}else if("フェアリー".equals(skillName)){
			return YOKI;
		}else if("フェアリー".equals(skillName)){
			return MUJAKI;
		}else if("フェアリー".equals(skillName)){
			return TEREYA;
		}else if("フェアリー".equals(skillName)){
			return GANBAIYA;
		}else if("フェアリー".equals(skillName)){
			return SUNAO;
		}else if("フェアリー".equals(skillName)){
			return KIMAGURE;
		}else if("フェアリー".equals(skillName)){
			return MAJIME;
		}else{
			return -1;
		}
	}
}
